{
  "version": 2,
  "name": "budgettrack-fullstack",
  "buildCommand": "cd backend && npm run build",
  "devCommand": "cd backend && npm run dev",
  "installCommand": "cd backend && npm install",
  "outputDirectory": "backend",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  }
}
